<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_signs"
    tools:context=".activity.SpeechActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-18dp"
        tools:layout_editor_absoluteY="-124dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp"
            >

            <ImageView
                android:id="@+id/imglogo"
                android:layout_width="157dp"
                android:layout_height="143dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/logo_hopevoice_white" />


            <Button
                android:id="@+id/speech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="الترجمة الصوتية"
                style="@style/viewParent.headerText.HomeCardTitle"
                android:textColor="#ffffff"
                android:background="@drawable/button_transparent"
                android:drawableLeft="@drawable/microphone"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/textv"
                style="@style/viewParent.headerText.contentText"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="....." />
            <Button
                android:id="@+id/ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=" بحث "
                style="@style/viewParent.headerText.HomeCardTitle"
                android:textColor="#ffffff"
                android:background="@drawable/button_transparent"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ListView
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:id="@+id/listView"
                        android:divider="@drawable/button_transparent"
                        android:nestedScrollingEnabled="true"
                        >

                    </ListView>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <!--<EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/textadd"/>
            <Button
                android:id="@+id/insert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=" اضف "
                style="@style/viewParent.headerText.HomeCardTitle"
                android:textColor="#ffffff"
                android:background="@drawable/background"
                android:layout_centerHorizontal="true"
                />-->



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>